%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .span-7.colborder
    %div
      = f.label :email
      %br/
      = f.email_field :email, :placeholder => "Email"
    %div
      = f.label :password
      %br/
      = f.password_field :password, :placeholder => "Password"
    %div
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, :placeholder => "Confirm password"
  .span-7.colborder
    %div
      = f.label :first_name
      %br/
      = f.text_field :first_name, :placeholder => "First name"
    %div
      = f.label :last_name
      %br/
      = f.text_field :last_name, :placeholder => "Last name"
    %div
      = f.label :address
      %br/
      = f.text_field :address, :placeholder => "Address"
  .span-7.last
    %div
      = f.label :phone
      %br/
      = f.text_field :phone, :placeholder => "Phone"
    %div
      %div.span-4.add_top
        = f.label :gender
      %div.span-2.last.pull-1
        = f.select(:gender, gender_select_options(resource[:gender]))
    %div
      %div.span-4.add_top
        = f.label "Survey schedule"
      %div.span-2.last.pull-1
        = f.select(:schedule, schedule_select_options(resource[:schedule]))
    %div
      %div.span-4.add_top
        = f.label :notification_method
      %div.span-2.last.pull-1
        = f.select(:notification_method, notification_select_options(resource[:notification_method ]))
  .clear.right
    = f.submit "Sign up", :class => "btn right"
    %br/
    = link_to "Forgot your password?", new_password_path(resource_name), :class => "right add_right"
    %br/
    = link_to "Sign in", new_session_path(resource_name), :class => "right add_right"
